<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
    <% image = message_interlocutor(message).image_url %>
    <% if !image.blank? %>
        <img src="<%= image %>" width="50px"/>
    <% else %>
        <img src="/assets/chat_profile.png" width="50px"/>
    <% end %>

  </div>
  <div class="chatboxmessagecontent">
    <p class="message-body"><%= message.body %></p>
    <time datetime="<%= message.created_at %>" class="clearfix" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= message_interlocutor(message).name %> â€¢ <%= message.created_at.strftime("%H:%M %p") %>
    </time>
  </div>
</li>